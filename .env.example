# Пример файла .env
# Скопируйте этот файл в .env и заполните необходимыми значениями

# Токен Telegram бота (получить у @BotFather)
TELEGRAM_TOKEN=your_telegram_token_here

# Настройки PostgreSQL базы данных
PGHOST=db.repl.co
PGPORT=5432
PGDATABASE=postgres
PGUSER=postgres
PGPASSWORD=postgres

# Полный URL соединения с базой данных
DATABASE_URL=postgresql://postgres:postgres@db.repl.co:5432/postgres

# Ключ API OpenAI для генерации планов тренировок
OPENAI_API_KEY=your_openai_api_key_here

# Секретный ключ для Flask сессий
SESSION_SECRET=your_secret_key_here