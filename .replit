modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["jq", "openssl", "postgresql"]

[deployment]
deploymentTarget = "gce"
run = ["sh", "-c", "bash start_24_7.sh"]

[workflows]
runButton = "Bot 24/7"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "bot_runner"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "bot_runner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Web and Bot"
author = 41797496
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 app:app --access-logfile -"

[[workflows.workflow]]
name = "Web Server"
author = 41797496
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 app:app --access-logfile - --timeout 120"

[[workflows.workflow]]
name = "Bot 24/7"
author = 41797496
mode = "parallel"

[[workflows.workflow.tasks]]
